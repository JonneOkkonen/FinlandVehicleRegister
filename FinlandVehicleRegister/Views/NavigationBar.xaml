<UserControl
    x:Class="FinlandVehicleRegister.Views.NavigationBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:FinlandVehicleRegister.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="300">

    <Grid>
        <!--Here is the navigation bar-->
        <StackPanel HorizontalAlignment="Left" Margin="0,0,0,0" Width="300">
            <!--This button sets the view page to Homepage-->          
            <Button x:Name="btnHomePage" Margin="0" Width="300" Background="#00000000" Click="MenuItem_Click">
                <StackPanel Orientation="Horizontal" Width="280">
                    <SymbolIcon Symbol="Home" Margin="10,15,10,15" Height="20" Width="20" Foreground="White"/>
                    <TextBlock Text="Homepage" Foreground="White" Margin="10,15,10,15" FontSize="15" />
                </StackPanel>
            </Button>
            <!--This button sets the view page to Search Page-->   
            <Button x:Name="btnSearch" Margin="0" Width="300" Background="#00000000" Click="MenuItem_Click">
                <StackPanel Orientation="Horizontal" Width="280">
                    <SymbolIcon Symbol="Zoom" Margin="10,15,10,15" Height="20" Width="20" Foreground="White"/>
                    <TextBlock Text="Search" Foreground="White" Margin="10,15,10,15" FontSize="15" />
                </StackPanel>
            </Button>
            <!--This button sets the view page to Charts Page-->
            <Button x:Name="btnCharts" Margin="0" Width="300" Background="#00000000" Click="MenuItem_Click">
                <StackPanel Orientation="Horizontal" Width="280">
                    <SymbolIcon Symbol="FourBars" Margin="10,15,10,15" Height="20" Width="20" Foreground="White"/>
                    <TextBlock Text="Charts" Foreground="White" Margin="10,15,10,15" FontSize="15" />
                </StackPanel>
            </Button>
            <!--This button sets the view page to Help Page-->
            <Button x:Name="btnHelp" Margin="0" Width="300" Background="#00000000" Click="MenuItem_Click">
                <StackPanel Orientation="Horizontal" Width="280">
                    <SymbolIcon Symbol="Help" Margin="10,15,10,15" Height="20" Width="20" Foreground="White"/>
                    <TextBlock Text="Help" Foreground="White" Margin="10,15,10,15" FontSize="15" />
                </StackPanel>
            </Button>
            <!--This sets the background opacity of the navigation bar-->
            <StackPanel.Background>
                <AcrylicBrush TintColor="#CC000000" TintOpacity="0.85" BackgroundSource="HostBackdrop"/>
            </StackPanel.Background>
        </StackPanel>
    </Grid>
</UserControl>
